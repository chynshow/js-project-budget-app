{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["airbnb-base"],
  "plugins": ["@typescript-eslint"],
  "settings": {
    "import/extensions": [".js"],
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  },
  "rules": {
    "no-undef": "off",
    "no-alert": "off",
    "no-console": "off",
    "implicit-arrow-linebreak": "off",
    "object-curly-newline": "off",
    "comma-dangle": "off"
  }
}
